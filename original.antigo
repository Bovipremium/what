<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Result Plus - Ver Preço</title>
  <style>
    body{
      margin:0;
      font-family: Arial, Helvetica, sans-serif;
      min-height:100vh;
      display:flex;
      align-items:center;
      justify-content:center;
      text-align:center;
      color:#fff;
      background:#0d1117 url('result-foto.png') center/cover no-repeat fixed;
    }
    .overlay{
      background: rgba(0,0,0,.65);
      padding: 42px 30px;
      border-radius: 20px;
      width:min(92vw, 520px);
      box-shadow: 0 20px 60px rgba(0,0,0,.35);
    }
    h1{font-size:1.6rem; margin: 0 0 14px}
    p.sub{opacity:.9; margin: 0 0 22px}
    button.btn{
      display:inline-block;
      background: #25D366;
      color:#fff; font-weight:700;
      padding:15px 26px; border-radius:40px;
      border:0; cursor:pointer;
      font-size:1.1rem; box-shadow:0 8px 24px rgba(0,0,0,.35);
      transition: transform .2s ease, filter .2s ease;
    }
    .btn:hover{ transform: translateY(-1px); filter:brightness(1.05); }
    .note{font-size:.9rem; margin-top:12px; opacity:.9}
    /* Campo de telefone (acima do título) */
    .campo-telefone{
      margin-bottom: 18px;
    }
    .campo-telefone input{
      width: 100%;
      padding: 12px 14px;
      border-radius: 8px;
      border: none;
      font-size: 1rem;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="overlay">
    <form id="leadForm">
      <!-- Campo opcional ACIMA do título -->
      <div class="campo-telefone">
        <input
          type="tel"
          id="telefone"
          name="telefone"
          inputmode="numeric"
          placeholder="Seu número (00) 0 0000-0000 — opcional"
          aria-label="Seu número (opcional)"
          pattern="^\(\d{2}\)\s?\d\s?\d{4}-\d{4}$"
        >
      </div>

      <h1>Result Plus Carrapato, Berne, Verme e Mosca</h1>
      <p class="sub">Clique abaixo para ver o preço.</p>

      <button type="submit" class="btn">SOBRE O PRODUTO</button>
    </form>

    <div class="note">Ao continuar, você concorda em ser contatado sobre esta oferta.</div>
  </div>

  <script>
    const WHATSAPP_PHONE = "5562993463712";
    const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbzTVpFi2OkZCF7dQXMRa_-9jCoAjUezH42jKK-WOKLD0GLl5hSupkZAbFLxRpCetYQJEA/exec";
    const FIXED_MESSAGE = "Olá, Gostaria de saber mais informações!";
    const qs = new URLSearchParams(window.location.search);

    // Máscara de telefone: (00) 0 0000-0000
    function maskPhone(value){
      const digits = value.replace(/\D/g, "").slice(0, 11); // até 11 dígitos
      const [dd1, dd2, d1, d2, d3, d4, d5, d6, d7, d8, d9] = digits.split("");
      let out = "";
      if (dd1) out = `(${dd1}`;
      if (dd2) out = `(${dd1}${dd2}) `;
      if (d1)  out += `${d1}`;
      if (d2)  out += ` ${d2}`;
      if (d3)  out += `${d3}`;
      if (d4)  out += `${d4}`;
      if (d5)  out += `${d5}`;
      if (d6)  out += `-${d6}`;
      if (d7)  out += `${d7}`;
      if (d8)  out += `${d8}`;
      if (d9)  out += `${d9}`;
      return out;
    }

    // Normaliza para apenas dígitos (para salvar)
    function onlyDigitsPhone(masked){
      return masked.replace(/\D/g, "");
    }

    // Pré-preenche se já tiver salvo
    function prefill() {
      const telLS  = localStorage.getItem("lead_telefone_masked");
      if(telLS) document.getElementById("telefone").value = telLS;
    }

    async function saveLead(payload){
      try{
        await fetch(WEB_APP_URL, {
          method: "POST",
          mode: "no-cors",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });
      }catch(e){ console.warn("Falha ao salvar:", e); }
    }

    function openWhatsApp(){
      const url = `https://wa.me/${WHATSAPP_PHONE}?text=${encodeURIComponent(FIXED_MESSAGE)}`;
      window.location.href = url;
    }

    // Aplica máscara ao digitar
    const telInput = document.getElementById("telefone");
    telInput.addEventListener("input", () => {
      const pos = telInput.selectionStart;
      const masked = maskPhone(telInput.value);
      telInput.value = masked;
      // tentativa simples de manter o cursor próximo
      telInput.selectionStart = telInput.selectionEnd = pos;
    });

    document.getElementById("leadForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const telefoneMasked = telInput.value.trim();
      const telefoneDigits = onlyDigitsPhone(telefoneMasked); // só números
      const nome = "Cliente"; // mantém compatível com sua planilha

      // salva se usuário preencheu algo
      if(telefoneDigits) {
        localStorage.setItem("lead_telefone_masked", telefoneMasked);
        localStorage.setItem("lead_telefone_digits", telefoneDigits);
      }

      const lead = {
        nome,
        telefone: telefoneMasked || "",
        telefone_digits: telefoneDigits || "",
        utm_source: qs.get("utm_source") || "",
        utm_medium: qs.get("utm_medium") || "",
        utm_campaign: qs.get("utm_campaign") || "",
        referrer: document.referrer || "",
        userAgent: navigator.userAgent || "",
        page: location.href,
        ts: new Date().toISOString()
      };

      saveLead(lead);
      openWhatsApp();
    });

    prefill();
  </script>
</body>
</html>
